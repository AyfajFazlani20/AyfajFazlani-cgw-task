<apex:page controller="InvoiceCreatorController" lightningStylesheets="true">
    <apex:form>
        <apex:pageBlock title="Invoice Parameters">
            <apex:pageBlockSection columns="1">
                <apex:outputPanel >
                    <table class="list" border="1" cellpadding="0" cellspacing="0">
                        <thead>
                            <tr class="headerRow">
                                <th>Parameter</th>
                                <th>Value from URL</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>origin_record</td>
                                <td>{!originRecord}</td>
                            </tr>
                            <tr>
                                <td>account</td>
                                <td>{!account}</td>
                            </tr>
                            <tr>
                                <td>invoice_date</td>
                                <td>{!invoiceDate}</td>
                            </tr>
                            <tr>
                                <td>invoice_due_date</td>
                                <td>{!invoiceDueDate}</td>
                            </tr>
                            <tr>
                                <td>child_relationship_name</td>
                                <td>{!childRelationshipName}</td>
                            </tr>
                            <tr>
                                <td>line_item_description</td>
                                <td>{!lineItemDescription}</td>
                            </tr>
                            <tr>
                                <td>line_item_quantity</td>
                                <td>{!lineItemQuantity}</td>
                            </tr>
                            <tr>
                                <td>line_item_unit_price</td>
                                <td>{!lineItemUnitPrice}</td>
                            </tr>
                        </tbody>
                    </table>
                </apex:outputPanel>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>